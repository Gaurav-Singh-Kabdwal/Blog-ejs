<%- include("partials/header"); %>

    <h1>Compose</h1>
    <form action="/compose" method="post">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input id="title" class="form-control" type="text" name="postTitle" required>
        </div>
        <div class="mb-3">
            <label for="textarea" class="form-label">Post</label>
            <textarea id="textarea" class="form-control" type="text" name="postContent" rows="3" required></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="publish" autocomplete="off">Publish</button>

    </form>


    <%- include("partials/footer"); %>